{
	"name": "levita-monorepo",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "pnpm -r --filter './packages/*' run build",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"test": "vitest run",
		"bench": "vitest bench",
		"test:visual": "playwright test --grep-invert demo",
		"test:visual:update": "playwright test --grep-invert demo --update-snapshots",
		"test:visual:record": "playwright test --grep demo && ./tests/visual/convert-to-gif.sh"
	},
	"volta": {
		"node": "22.14.0",
		"pnpm": "10.5.2"
	},
	"packageManager": "pnpm@10.5.2",
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@playwright/test": "^1.58.2",
		"happy-dom": "^20.7.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	}
}
